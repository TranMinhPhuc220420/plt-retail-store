FROM node:18-alpine

# Install curl and wget for health checks
RUN apk add --no-cache curl wget

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies (including dev dependencies)
RUN npm install

# Copy source code
COPY . .

# Create necessary storage directories
RUN mkdir -p /app/storage/user/avatars /app/storage/stores/avatars /app/storage/products/avatars /app/storage/employees/avatars

# Expose port
EXPOSE 5000

# Run as root in development to avoid permission issues with mounted volumes
# This is acceptable for development but should NEVER be done in production
CMD ["npm", "run", "dev"]